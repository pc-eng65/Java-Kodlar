                Scanner scan= new Scanner (System.in);
                int sayi=1+(int)(Math.random()*10);
               int hak=5;
               while(hak>0){
               hak--;
               sayac++;
               
                   System.out.println("lutfen tahmininizi giriniz:");
                   tahmin=scan.nextInt();
                   if(sayi==tahmin){
                       System.out.println("Tebrikler tahmininiz doğru! "+sayac+". defada bildiniz");
                       break;
                   }
                   
                   else if(sayi>tahmin){
